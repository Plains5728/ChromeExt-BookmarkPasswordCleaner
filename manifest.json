// manifest.json
{
    "manifest_version": 3,
    "name": "Bookmark Cleanup Manager",
    "version": "0.1",
    "description": "Organize, group, and clean up Chrome bookmarks based on metadata and link health.",
    "permissions": [
      "bookmarks",
      "storage",
      
      "tabs"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    }
  }
  